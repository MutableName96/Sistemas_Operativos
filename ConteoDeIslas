#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include <stdbool.h>

#define fil 8
#define col 8
int matriz[fil][col];
bool matrizV[fil][col];//matrizVisitados
int dx[4]={-1,1,0,0};//izquierda o deracha
int dy[4]={0,0,-1,1};//arriba o abajo

void llenarMatrizV(){
	
	for(int i=0; i<fil ;i++){
		
		for(int j=0; j<col;j++){
			
			matrizV[i][j]=false;
			
			}
		}
	}

int generarNumero(){
	return (rand() % 2);
}


void mostrarMatriz(){
	for(int i=0; i<fil ;i++){
		
		for(int j=0; j<col;j++){
			
			printf("%d ", matriz[i][j])	;		
			}
			printf("\n");

		}
	}
	
void llenarMatriz(){
	for(int i=0; i<fil ;i++){
		
		for(int j=0; j<col;j++){
			
			matriz[i][j]=generarNumero();
			
			}
		}
	}
	
void algoritmoDFS(int x, int y){
	matrizV[x][y]=true;//marcar como visitado
	for(int i=0 ; i<4; i++){
		int fx = x + dx[i];
		int fy = y + dy[i];
		
		if(fx>=0 && fx<fil && fy>=0 && fy<col && matrizV[fx][fy]!=false){+
			printf("entre");
			algoritmoDFS(fx, fy);
			}
		}
	printf("\n");

	}
	
	

	
int buscarIslas(){
	int cont = 0;
	llenarMatrizV();
		for(int i=0; i<fil ;i++){
		
			for(int j=0; j<col;j++){
				
				if(matriz[i][j] == 1 && matrizV[i][j]!=true){
					algoritmoDFS(i,j);
					cont++;
					
					} 					
			}
		}
		return cont;
		
	}
	
int main(){
	srand(time(NULL));
	llenarMatriz();
	mostrarMatriz();
	printf("Total de Islas: %d",buscarIslas());
	return 0;
}

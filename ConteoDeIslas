#include <stdio.h>
#include <stdlib.h>
#include <time.h>

#define fil 8
#define col 8
int matriz[fil][col];
int matrizV[fil][col];//matrizVisitados

int generarNumero(){
	return (rand() % 2);
}


void mostrarMatriz(){
	for(int i=0; i<fil ;i++){
		
		for(int j=0; j<col;j++){
			
			printf("%d ", matriz[i][j])	;		
			}
			printf("\n");

		}
	}
	
void llenarMatriz(){
	for(int i=0; i<fil ;i++){
		
		for(int j=0; j<col;j++){
			
			matriz[i][j]=generarNumero();
			
			}
		}
	}
	
	
void marcarIslas(){
	for(int i=0; i<fil ;i++){
			for(int j=0; j<col;j++){
				matrizV[i][j]=1;
			}
		}

}
	
int buscarIslas(){
	int cont = 0;
		for(int i=0; i<fil ;i++){
		
			for(int j=0; j<col;j++){
				
				if(matriz[i][j] == 1 && matizV[i][j]!=0){
					marcarIslas(i,j);
					cont++;
					
					} 					
			}
		}
		return cont;
		
	}
	
int main(){
	srand(time(NULL));
	llenarMatriz();
	mostrarMatriz();
	printf("Total de Islas: %d",buscarIslas());
	return 0;
}
